<body class="d-flex flex-column" style="min-height: 100vh">
    <main class="flex-fill">
    <h2>List of your booked ticket</h2>
    <section data-position="order">
        <table class="table table-hover table-bordered m-3 text-center">  
            <tr class="table-info">
                <th>OrderId</th>
                <th>UserId</th>
                <th>MovieId</th>
                <th>Movie Date Time</th>
            </tr>
            <% for ( var i=0; i<alltheorders.length; i++) { %>
            <tr>
                <th class="fw-normal"><%= alltheorders[i].orderId %></th>
                <th class="fw-normal"><%= alltheorders[i].userId %></th>
                <th class="fw-normal"><%= alltheorders[i].movieId %></th>
                <th class="fw-normal"><%= alltheorders[i].movieDateTime %></th>
            </tr>
            <% } %>
        </table>
    </section>

    <h2>Update a booking</h2>
    <form method="PUT" action="/booking/update">
        <label for="orderId">Choose a booking:</label>
        <input type="text" name="orderId" id="orderId">
        <label for="movieId">Pick a new movie:</label>
        <input type="text" name="movieId" id="movieId">
        <label for="movieDateTime">Or pick a new date/time:</label>
        <input type="datetime-local" name="movieDateTime" id="movieDateTime">
        <input type="submit" value="Confirm">
    </form>

    <h2>Delete a booking</h2>
    <form method="DELETE" action="/booking/delete">
        <label for="orderId">Choose a booking:</label>
        <input type="text" name="orderId" id="orderId">
        <input type="submit" value="Confirm">
    </form>
</main>
</body>
