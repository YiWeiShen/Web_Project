<body class="d-flex flex-column" style="min-height: 100vh">
    <main class="flex-fill">
        <h1 class="m-5 text-center">Welcome to the Movie Ticket Booking System</h1>
        <h2 class="m-5 text-center">Login</h2>
        <form class="container col-lg-4 offset-lg-4" name="form" method="POST" action="/login">
            <div class="row justify-content-center">
                <div class="col-xs-4">
                    <label for="userId">Username:</label>
                    <input class="form-control col-xs-4" type="text" name="userId" id="userId"
                    autocomplete="off" placeholder="Enter username">
                    <div id="userId_error">Please fill up your username</div>
                    <br>
                </div>
                <div class="col-xs-4">
                    <label for="password">Password:</label>
                    <input class="form-control col-xs-4" type="password" name="password" id="password"
                    autocomplete="off" placeholder="Enter password"> 
                    <div id="pass_error">Please fill up your Password</div>
                    <br>
                </div>
            </div>
                <input class="btn btn-primary mx-auto d-block" type="submit" value="Login">
                <p class="text-secondary text-center mt-4">Don't have an account?</p>
                <div class="container text-center">
                    <a class="btn btn-success" href="register">Sign Up</a>
                </div>
        </form>
    </main>
</body>

