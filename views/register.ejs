        <main class="flex-fill">
        <h1 class="m-5 text-center">Welcome to the Movie Ticket Booking System</h1>
        <h2 class="m-5 text-center">Register</h2>
        <form class="container col-lg-4 offset-lg-4" method="POST" action="/register">
            <div class="row justify-content-center">
                <div class="col-xs-4">
                    <label for="userId">Username:</label>
                    <input class="form-control col-xs-4" type="text" name="userId" id="userId"> 
                    <span class="text-danger" id="userId_error_message"></span>
                    <br>
                </div>
                <div class="col-xs-4">
                    <label for="password">Password:</label>
                    <input class="form-control col-xs-4" type="password" name="password" id="password"> 
                    <span class="text-danger" id="password_error_message"></span>
                    <br>
                </div>
                <div class="col-xs-4">
                    <label for="firstname">First Name:</label>
                    <input class="form-control col-xs-4" type="text" name="firstname" id="firstname"> 
                    <span class="text-danger" id="firstname_error_message"></span>
                    <br>
                </div>
                <div class="col-xs-4">
                    <label for="lastname">Last Name:</label>
                    <input class="form-control col-xs-4" type="text" name="lastname" id="lastname"> 
                    <span class="text-danger" id="lastname_error_message"></span>
                    <br>
                </div>
                <div class="col-xs-4">
                    <label for="email">Email:</label>
                    <input class="form-control col-xs-4" type="text" name="email" id="email"> 
                    <span class="text-danger" id="email_error_message"></span>
                    <br>
                </div>
                <div class="col-xs-4">
                    <label for="address">Address:</label>
                    <input class="form-control col-xs-4" type="text" name="address" id="address"> 
                    <span class="text-danger" id="address_error_message"></span>
                    <br>
                </div>
                <div class="col-xs-4">
                    <label for="phone">Phone:</label>
                    <input class="form-control col-xs-4" type="text" name="phone" id="phone"> 
                    <span class="text-danger" id="phone_error_message"></span>
                    <br>
                </div>
            </div>
            <input class="btn btn-primary mx-auto d-block" type="submit" value="Register">
            <div class="container text-center">
                <a class="btn btn-secondary mt-2 mb-5" href="login">Back</a>
            </div>
        </form>
    </main>
</body>

